{
    "extends": "@repo/typescript-config/node",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "rootDir": "src",
        "outDir": "dist",
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "sourceMap": true,
        "allowJs": true,
        "checkJs": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
