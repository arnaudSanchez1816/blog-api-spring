{
    "extends": "@repo/typescript-config/node",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "rootDir": "src",
        "outDir": "dist",
        "composite": true,
        "baseUrl": ".",
        "sourceMap": true,
        "allowJs": false,
        "checkJs": false,
        "noEmit": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
