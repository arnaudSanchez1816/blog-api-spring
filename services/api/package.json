{
    "name": "api",
    "version": "1.0.0",
    "description": "",
    "main": "./src/index.js",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "node --watch ./src/index.js | pnpx pino-pretty",
        "build": "pnpm run prisma:generate",
        "start": "NODE_ENV=production node ./src/index.js | pnpx pino-pretty",
        "lint": "eslint ./src",
        "test:unit": "vitest run -c ./vitest.config.unit.js",
        "test:unit:watch": "vitest --watch -c ./vitest.config.unit.js",
        "test:prisma:push": "dotenv -e .env.test -o -- pnpx prisma db push --skip-generate --force-reset",
        "prisma:migrate": "pnpx prisma migrate dev",
        "prisma:seed": "pnpx prisma db seed",
        "prisma:push": "pnpx prisma db push",
        "prisma:reset": "pnpx prisma migrate reset",
        "prisma:generate": "pnpx prisma generate --schema=./prisma/schema.prisma",
        "prisma:deploy": "pnpx prisma migrate deploy"
    },
    "prisma": {
        "seed": "node prisma/seeding/seed.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^6.14.0",
        "bcryptjs": "^3.0.2",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dompurify": "^3.2.6",
        "dotenv": "^17.2.1",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "http-errors": "^2.0.0",
        "jsdom": "^27.0.0",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "marked": "^16.3.0",
        "passport": "^0.7.0",
        "passport-anonymous": "^1.0.1",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pino": "^9.9.0",
        "pino-http": "^10.5.0",
        "zod": "^4.1.5"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/zod-schemas": "workspace:*",
        "@vitest/eslint-plugin": "^1.4.2",
        "eslint": "^9.34.0",
        "eslint-plugin-import-x": "^4.16.1",
        "pino-pretty": "^13.1.1",
        "prisma": "^6.14.0",
        "supertest": "^7.1.4",
