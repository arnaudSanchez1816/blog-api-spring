{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "preview": {
            "dependsOn": ["^preview"],
            "cache": false,
            "persistent": true
        },
        "test:unit": {
            "dependsOn": ["^test:unit"]
        },
        "test:unit:watch": {
            "cache": false,
            "persistent": true
        }
    }
}
